<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CREATE QUESTION</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

        * {
            margin: 0;
            padding: 0;
            scrollbar-width: none;
            box-sizing: border-box;
            outline: none;
            font-family: Poppins;
        }

        .container {
            width: 100%;
            height: 100vh;
        }

        .navbar {
            width: 100%;
            height: 60px;
            background-color: lightblue;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 5%;

            a {
                padding: 10px 30px;
                text-decoration: none;
                color: black;
                font-weight: 700;
            }

            a:hover {
                background-color: rebeccapurple;
                transition: .15s ease-in-out;
                color: white;
            }
        }

        .question {
            width: 100%;
            height: calc(100% - 60px);
        }

        .form {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 15px;

            input,
            button {
                padding: 10px 40px;
                width: 30%;
            }

            button {
                background-color: black;
                color: white;
                border: none;
                outline: none;
            }

        }

        /* HTML: <div class="loader"></div> */
        .loader {
            width: 100px;
            aspect-ratio: 1;
            display: grid;
            animation: l14 4s infinite;
        }

        .loader::before,
        .loader::after {
            content: "";
            grid-area: 1/1;
            border: 8px solid;
            border-radius: 50%;
            border-color: red red #0000 #0000;
            mix-blend-mode: darken;
            animation: l14 1s infinite linear;
        }

        .loader::after {
            border-color: #0000 #0000 blue blue;
            animation-direction: reverse;
        }

        @keyframes l14 {
            100% {
                transform: rotate(1turn)
            }
        }

        #con {
            width: 100%;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            /* display: none; */
        }

        @media all and (max-width: 576px) {
            .navbar {
                width: 100%;
                height: 60px;
                background-color: lightblue;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 0 10px;

                a {
                    padding: 10px 30px;
                    text-decoration: none;
                    color: black;
                    font-weight: 700;
                    font-size: 10px;
                }
            }

            .form {
                width: 100%;
                height: 100%;
                display: flex;
                align-items: center;
                justify-content: center;
                flex-direction: column;
                gap: 15px;

                input,
                button {
                    padding: 10px 40px;
                    width: 80%;
                }

                button {
                    background-color: black;
                    color: white;
                    border: none;
                    outline: none;
                }

            }

        }
    </style>
</head>

<body onload="show()">
    <div class="con" id="con">
        <div class="loader"></div>
    </div>
    <div class="container">

        <div class="navbar">
            <a href="/admin">DASHBOARD</a>
            <a href="/admin/viewquestions">VIEW QUESTIONS</a>
            <a href="/admin/logout">LOGOUT</a>
        </div>

        <div class="question">
            <form action="/admin/createquestion" class="form" method="post">
                <input type="text" placeholder="create question ..." name="question" id="question" required>
                <button type="submit">ADD QUESTION</button>
            </form>
        </div>

    </div>

    <script>
        function show() {
            document.getElementById('con').style.display = "none"
        }
    </script>

</body>

</html>